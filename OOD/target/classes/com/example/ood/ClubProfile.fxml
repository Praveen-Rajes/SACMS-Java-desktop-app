         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Button fx:id="generateButton" layoutX="164.0" layoutY="394.0" mnemonicParsing="false" onAction="#onGenerateButtonClick" prefHeight="35.0" prefWidth="128.0" style="-fx-background-color: #0A4969;" text="Generate Report" textFill="WHITE">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Button>
      <Button fx:id="updateButton" layoutX="562.0" layoutY="65.0" mnemonicParsing="false" onAction="#onUpdateButtonClick" prefHeight="26.0" prefWidth="75.0" style="-fx-background-color: #0A4969;" text="Edit" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
         <graphic>
            <FontIcon iconColor="WHITE" iconLiteral="fas-edit" />
         </graphic></Button>
      <Button fx:id="saveButton" layoutX="651.0" layoutY="65.0" mnemonicParsing="false" onAction="#onSaveButtonClick" prefHeight="26.0" prefWidth="66.0" style="-fx-background-color: #0A4969;" text="Save" textFill="WHITE">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
         <graphic>
            <FontIcon iconColor="WHITE" iconLiteral="fas-save" />
         </graphic></Button>
