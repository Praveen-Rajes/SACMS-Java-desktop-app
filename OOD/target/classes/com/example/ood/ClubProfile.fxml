      <Pane prefHeight="50.0" prefWidth="750.0" style="-fx-background-color: #0A4969;">
         <children>
            <Label layoutX="309.0" layoutY="8.0" text="Club Profile" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
         </children>
      </Pane>
      <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#0a4969" height="200.0" layoutX="57.0" layoutY="115.0" stroke="BLACK" strokeType="INSIDE" width="200.0" />
      <ImageView fx:id="clubImageView" fitHeight="176.0" fitWidth="177.0" layoutX="69.0" layoutY="127.0" pickOnBounds="true" preserveRatio="true" />
      <TextField fx:id="clubNameField" layoutX="319.0" layoutY="147.0" prefHeight="29.0" prefWidth="399.0" promptText="Club Name" style="-fx-background-color: transparent;" />
      <TextField fx:id="categoryField" layoutX="319.0" layoutY="205.0" prefHeight="29.0" prefWidth="399.0" promptText="Category" style="-fx-background-color: transparent;" />
      <TextArea fx:id="descriptionArea" layoutX="319.0" layoutY="277.0" prefHeight="200.0" prefWidth="399.0" promptText="Description" style="-fx-background-color: transparent;" />
